@using Recrovit.RecroGridFramework.Client.Blazor.Parameters
@using Recrovit.RecroGridFramework.Client.Blazor.UI.Components

<EntityComponent EntityParameters="EntityParameters">
</EntityComponent>

@code {

    [Parameter]
    public RgfEntityParameters EntityParameters { get; set; } = new RgfEntityParameters("RG_OrderDetails_1");

    private RenderFragment CustomFormItem(RgfFormItemParameters param) =>
        @<input id="customRange1" @bind="param.ItemData.StringValue" type="range" class="form-range" min="0" max="1" step="0.01"
           data-bs-toggle="tooltip" style="cursor:pointer" @oninput="@((arg) => UpdateTooltip(arg.Value))">;

    private void UpdateTooltip(object? value = null)
    {
        _ = _module?.InvokeVoidAsync("discountTooltip", "customRange1", value);
    }
}